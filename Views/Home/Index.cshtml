@model IEnumerable<EcomProject.Models.Product>
@{
    ViewBag.Email = TempData["Email"];
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <link rel="stylesheet" type="text/css" href="~/css/style.css" />
    <link rel="stylesheet" type="text/css" href="~/vendor/owl-slider.css" />
    <link rel="stylesheet" type="text/css" href="~/vendor/settings.css" />
    <link rel="shortcut icon" href="~/images/favicon.png" />
    <script type="text/javascript" src="~/js/jquery-1.11.1.min.js"></script>
    <title>Home</title>
</head>
<body>
    <div class="awe-page-loading">
        <div class="awe-loading-wrapper">
            <div class="awe-loading-icon">
                <img src="~/images/seattle.png" alt="images">
            </div>
            <div class="progress">
                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
    </div>


    <!-- End pushmenu -->
    <div class="wrappage">
        <!-- <div id="rtl">RTL</div> -->
        <header id="header" class="header-v3">
            <!-- End topbar -->
            <div class="header-top">
                <div class="container">
                    <div class="box">
                        <p class="icon-menu-mobile"><i class="fa fa-bars"></i></p>
                        <div class="logo">
                            <a href="/" title="The Seattle Pour">
                                <img src="~/images/seattle.png" alt="images">
                            </a>
                        </div>
                        <div class="logo-mobile"><a href="/" title="SeattlePour"><img src="~/images/seattle.png" alt="SeattlePour-Logo"></a></div>


                        <nav class="mega-menu">
                            <!-- Brand and toggle get grouped for better mobile display -->
                        </nav>


                    </div>
                </div>
                <!-- End container -->
            </div>
            <!-- End header-top -->
        </header><!-- /header -->
        <div class="container">

            <div class="tp-banner">
                <div class="container">
                    <div class="banner-header banner-lbook3">
                        <img src="~/images/banner-seattle.jpg" alt="Banner-header" />
                    </div>
                </div>
            </div>
        <br/><br /><br />
                <!-- End container -->
                <div class="container container-ver2">
                    <div class="page-login box space-50">
                        <div class="row">


                            @if (ViewBag.Email == null)
                            {
                                <div class="col-md-6 sign-in space-30">
                                    <h3>sign in</h3>
                                    <p>Hello, please log in to your account.</p>

                                    <!-- End social -->
                                    <form class="form-horizontal" method="GET" action="/account/login">

                                        <button type="submit" class="link-v1 rt">LOGIN NOW</button>
                                    </form>
                                    <!-- End form -->
                                </div>
                                <!-- End col-md-6 -->
                                <div class="col-md-6">
                                    <div class="register box space-50">
                                        <h3>Create A New Account</h3>
                                        <p>Create your own Seattle Pour account.</p>
                                        <form class="form-horizontal" method="GET" action="/account/register">
                                            <button type="submit" class="link-v1 rt">Sign Up</button>
                                        </form>
                                    </div>
                                    <!-- End register -->
                                </div>
                                <!-- End col-md-6 -->
                                <div class="col-md-6">
                                    <div class="register box space-50">
                                        <h3>View Our Catalogue</h3>
                                        <form class="form-horizontal" method="GET" action="/Store/ShopCatalogue">
                                            <button type="submit" class="link-v1 rt">View Catalogue</button>
                                        </form>
                                    </div>
                                    <!-- End register -->
                                </div>
                            }
                            else
                            {
                                <div class="col-md-6 sign-in space-30">
                                    <h3>Welcome Back, @User.Claims.First(x => x.Type == "FullName").Value!</h3>

                                    <a class="link-v1 lh-50" href="/Store/ShopCatalogue" title="View Catalogue">View Catalogue</a>

                                    <!-- End social -->

                                </div>
                            }


                        </div>
                    </div>
                </div>
                <!-- End registration copy-->
            </div>
            <div class="container">
                <div class="shipping-v2 home3-shiping space-30">
                    <div class="col-md-3 col-sm-3 col-xs-6">
                        <i class="pe-7s-map-marker"></i>
                        <h3>Store Locator.</h3>
                        <p>Find your nearest The Seattle Pour store.</p>
                    </div>
                    <div class="col-md-3 col-sm-3 col-xs-6">
                        <i class="pe-7s-plane"></i>
                        <h3>Delivery &amp; Returns.</h3>
                        <p>Delivery &amp; returns information.</p>
                    </div>
                    <div class="col-md-3 col-sm-3 col-xs-6">
                        <i class="pe-7s-phone"></i>
                        <h3>The Seattle Pour app.</h3>
                        <p>Download the our mobile App.</p>
                    </div>
                    <div class="col-md-3 col-sm-3 col-xs-6">
                        <i class="pe-7s-headphones"></i>
                        <h3>Help &amp; Support</h3>
                        <p>Find the answers to your questions.</p>
                    </div>
                </div>
                <!-- End container -->
            </div>

            <!-- End container -->
            <div class="home1-banner1">
                <div class="container">
                    <div class="row">
                        <div class="title-text-v2">
                            <h3>New Arrivals</h3>
                        </div>
                        <!-- 2 FEATURED ITEMS-->
                        @foreach (var product in Model)
                        {
                            <div class="col-md-6 col-sm-6 space-30 float-left">
                                <a title="Epoxy-White">
                                    <img class="img-responsive" src="~/images/FL.jpg" alt="images">
                                </a>
                            </div>
                        }
                        <!-- END FEATURED ITEMS-->
                    </div>
                    <!-- End row -->
                </div>
            </div>
            <!-- End banner home 1 -->


            <footer id="footer" class="footer-v3 align-left">
                <div class="footer-inner">
                    <div class="container container-ver2">
                        <div class="row">
                            <div class="col-md-5 col-sm-6">
                                <a class="box space-30" title="Logo">
                                    <img src="~/images/logowhite.png" alt="Logo">
                                </a>
                                <p class="box space-30">We are a team of creative talents, local family business, that works with epoxy pour skill and high quality materials.</p>
                                <ul class="info-footer">
                                    <li><img src="~/images/footerv3-icon1.png" alt="images">123 King Street, Seattle, WA</li>
                                    <li><img src="~/images/footerv3-icon2.png" alt="images">+206 206 2061</li>
                                    <li><img src="~/images/footerv3-icon3.png" alt="images"><a href="mailto:theseattlepour.com" title="mail">theseattlepour@gmail.com</a></li>
                                </ul>
                            </div>
                            <div class="col-md-3 col-sm-4">
                                <h3 class="title-footer">OPENING TIME</h3>
                                <ul class="list-footer border">
                                    <li>Monday - Friday : 8 AM - 6 PM</li>
                                    <li>Saturday : 9 AM - 6 PM</li>
                                    <li>Sunday : Close</li>
                                    <li>We Work All The Holidays</li>
                                </ul>
                            </div>

                        </div>
                        <div class="box bottom">
                            <p class="float-left">Copyright &copy;2020 The Seattle Pour - All Rights Reserved.</p>
                            <a class="float-right" title="images"><img class="img-responsive" src="~/images/footer-pay.png" alt="images"></a>
                        </div>
                        <!-- End box -->
                    </div>
                    <!-- End container -->
                </div>
                <!-- End footer-inner -->
            </footer>
        </div>
    <!-- End wrappage -->
    <script type="text/javascript" src="~/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/js/owl.carousel.min.js"></script>
    <script type="text/javascript" src="~/js/jquery.themepunch.revolution.min.js"></script>
    <script type="text/javascript" src="~/js/jquery.themepunch.plugins.min.js"></script>
    <script type="text/javascript" src="~/js/engo-plugins.js"></script>
    <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js"></script>
    <script type="text/javascript" src="~/js/map-icons.js"></script>
    <script type="text/javascript" src="~/js/store.js"></script>
</body>
</html>