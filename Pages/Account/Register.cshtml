@page
@model EcomProject.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Login";
}


<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <link rel="stylesheet" type="text/css" href="~/css/style.css" />
    <link rel="stylesheet" type="text/css" href="~/vendor/owl-slider.css" />
    <link rel="stylesheet" type="text/css" href="~/vendor/settings.css" />
    <link rel="shortcut icon" href="~/images/favicon.png" />
    <link rel="stylesheet" type="text/css" href="~/vendor/lightgallery.css" />
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,500,700,300' rel='stylesheet' type='text/css'>
    <script type="text/javascript" src="~/js/jquery-1.11.1.min.js"></script>
    <title>Register Page</title>
</head>
<body>
    <div class="wrappage">
        <header id="header" class="header-v3">
            <!-- End topbar -->
            <div class="header-top">
                <div class="container">
                    <div class="box">
                        <p class="icon-menu-mobile"><i class="fa fa-bars"></i></p>
                        <div class="logo">
                            <a href="/" title="The Seattle Pour">
                                <img src="~/images/seattle.png" alt="images">
                            </a>
                        </div>
                        <div class="logo-mobile"><a href="/" title="SeattlePour"><img src="~/images/seattle.png" alt="SeattlePour-Logo"></a></div>


                        <nav class="mega-menu">
                            <!-- Brand and toggle get grouped for better mobile display -->
                        </nav>
                    </div>
                </div>
                <!-- End container -->
            </div>
            <!-- End header-top -->
        </header>

        <div class="container container-ver2">
            <div class="page-login box space-50">
                <div class="row">
                    <div class="col-md-6 sign-in space-30">
                        <h3>sign up</h3>
                        <p>Please provide more information to register.</p>

                        <!-- End social -->

                        <form class="form-horizontal" method="POST">
                            <div class="group box space-20" asp-validation-summary="All">
                                <label class="control-label" asp-for="RegisterData.Email">EMAIL ADDRESS *</label>
                                <input class="form-control" type="text" placeholder="EMAIL" asp-for="RegisterData.Email" id="inputemail">
                                <span asp-validation-for="RegisterData.Email"></span>
                            </div>
                            <div class="group box" asp-validation-summary="All">
                                <label class="control-label" asp-for="RegisterData.FirstName">FIRSTNAME *</label>
                                <input class="form-control" type="text" placeholder="FIRST NAME" id="inputpass" asp-for="RegisterData.FirstName">
                                <span asp-validation-for="RegisterData.FirstName"></span>
                            </div>
                            <div class="group box" asp-validation-summary="All">
                                <label class="control-label" asp-for="RegisterData.LastName">LASTNAME *</label>
                                <input class="form-control" type="text" placeholder="LAST NAME" id="inputpass" asp-for="RegisterData.LastName">
                                <span asp-validation-for="RegisterData.LastName"></span>
                            </div>
                            <div class="group box" asp-validation-summary="All">
                                <label class="control-label" asp-for="RegisterData.Password">PASSWORD *</label>
                                <input class="form-control" type="password" placeholder="PASSWORD" id="inputpass" asp-for="RegisterData.Password">
                                <span asp-validation-for="RegisterData.Password"></span>
                            </div>
                            <div class="group box" asp-validation-summary="All">
                                <label class="control-label" asp-for="RegisterData.ConfirmPassword">CONFIRM PASSWORD *</label>
                                <input class="form-control" type="password" placeholder="CONFIRM PASSWORD" id="inputpass" asp-for="RegisterData.ConfirmPassword">
                                <span asp-validation-for="RegisterData.ConfirmPassword"></span>
                            </div>

                            <div class="remember">
                                <!-- Margin -->
                            </div>

                            <button type="submit" class="link-v1 rt">SIGN UP</button>

                        </form>
                        <br />
                        <form class="form-horizontal" method="GET" action="/account/login">

                            <button type="submit" class="link-v1 rt">GO BACK TO LOG IN</button>
                        </form>




                        <!-- End form -->
                    </div>
                    <!-- End col-md-6 -->

                </div>
            </div>

        </div>
        <footer id="footer" class="footer-v3 align-left">
            <div class="footer-inner">
                <div class="container container-ver2">
                    <div class="row">
                        <div class="col-md-5 col-sm-6">
                            <a class="box space-30" title="Logo">
                                <img src="~/images/logowhite.png" alt="Logo">
                            </a>
                            <p class="box space-30">We are a team of creative talents, local family business, that works with epoxy pour skill and high quality materials.</p>
                            <ul class="info-footer">
                                <li><img src="~/images/footerv3-icon1.png" alt="images">123 King Street, Seattle, WA</li>
                                <li><img src="~/images/footerv3-icon2.png" alt="images">+206 206 2061</li>
                                <li><img src="~/images/footerv3-icon3.png" alt="images"><a href="mailto:theseattlepour.com" title="mail">theseattlepour@gmail.com</a></li>
                            </ul>
                        </div>
                        <div class="col-md-3 col-sm-4">
                            <h3 class="title-footer">OPENING TIME</h3>
                            <ul class="list-footer border">
                                <li>Monday - Friday : 8 AM - 6 PM</li>
                                <li>Saturday : 9 AM - 6 PM</li>
                                <li>Sunday : Close</li>
                                <li>We Work All The Holidays</li>
                            </ul>
                        </div>

                    </div>
                    <div class="box bottom">
                        <p class="float-left">Copyright &copy;2020 The Seattle Pour - All Rights Reserved.</p>
                        <a class="float-right" title="images"><img class="img-responsive" src="~/images/footer-pay.png" alt="images"></a>
                    </div>
                    <!-- End box -->
                </div>
                <!-- End container -->
            </div>
            <!-- End footer-inner -->
        </footer>
    </div>
        <script type="text/javascript" src="~/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="~/js/owl.carousel.min.js"></script>
        <script type="text/javascript" src="~/js/jquery.themepunch.revolution.min.js"></script>
        <script type="text/javascript" src="~/js/jquery.themepunch.plugins.min.js"></script>
        <script type="text/javascript" src="~/js/engo-plugins.js"></script>
        <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js"></script>
        <script type="text/javascript" src="~/js/map-icons.js"></script>
        <script type="text/javascript" src="~/js/lightgallery.js"></script>
        <script type="text/javascript" src="~/js/lg-thumbnail.js"></script>
        <script type="text/javascript" src="~/js/jquery.mousewheel.min.js"></script>
        <script type="text/javascript" src="~/js/lg-autoplay.js"></script>
        <script type="text/javascript" src="~/js/store.js"></script>
</body>

</html>